<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Options">

    <ImageView
        android:layout_width="115dp"
        android:layout_height="98dp"
        android:background="@drawable/icon_weight"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="40dp"/>
    <ImageView
        android:layout_width="77dp"
        android:layout_height="118dp"
        android:background="@drawable/millionaire_image_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <ListView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_options"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_list_view_options"
        android:layout_marginBottom="60dp" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp" android:maxHeight="400dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>